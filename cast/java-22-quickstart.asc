#!/usr/bin/env bash

# Définir votre utilisateur GitHub

read -p "Entrer votre utilisateur GitHub: " user

if [ -z "${user}" ]; then
    echo "Utilisateur GitHub non positionné !" >&2
    exit 1
fi

# Définir le nom du dépot à créer

repo=java-22-cli-$RANDOM

# Créer une application java-22-cli-XXXX à partir du template https://github.com/java-cli-apps/java-22-quickstart

gh repo create ${repo} --public --template git@github.com:java-cli-apps/java-22-quickstart.git

# Cloner le dépot java-22-cli-XXXX

cd /tmp
gh repo clone git@github.com:${user}/${repo}
cd ${repo}
tree

# Définir le nom de l'application

export APP_NAME=Java22Cli

# Tester l'application

make test

# Packager l'application

make package
unzip -l build/distributions/Java22Cli.zip
